datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @default(uuid())
  email    String    
  name     String
  servise  Servise[]
  contact  Int
  password String
  isValid  Boolean   @default(true)
}

model Servise {
  id         String     @id @default(uuid())
  title      String
  content    String
  Reviews    Float
  servitor   User       @relation(fields: [servitorID], references: [id])
  servitorID String     @map("authorId")//without this, it cant update the DB
  category   String
  isValid    Boolean    @default(true)
  location   Float
  analityc   Analityc[]
}

model Analityc {
  id        String  @id @default(uuid())
  servitor  Servise @relation(fields: [ServiseID], references: [id])
  ServiseID String
  Views     Int
  Clicks    Int
  Contacts  Int
  reports   Int
}

